# Database
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Clerk Authentication
CLERK_PUBLISHABLE_KEY=pk_test_xxxxx
CLERK_SECRET_KEY=sk_test_xxxxx
CLERK_WEBHOOK_SECRET=whsec_xxxxx

# Frontend URL
FRONTEND_URL=https://your-frontend-domain.com

# Email Configuration - Resend (Recommended)
# Get your API key from https://resend.com
RESEND_API_KEY=re_xxxxx
MAIL_FROM=onboarding@resend.dev

# Node Environment
NODE_ENV=production

# Email Configuration - SMTP (Fallback if Resend is not configured)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Alternative SMTP Providers:
# Gmail: smtp.gmail.com:587 (requires app password)
# SendGrid: smtp.sendgrid.net:587
# Mailgun: smtp.mailgun.org:587
# Mailtrap (dev): sandbox.smtp.mailtrap.io:2525

# For development with Mailtrap
# NODE_ENV=development
# SMTP_HOST=sandbox.smtp.mailtrap.io
# SMTP_PORT=2525
# MAILTRAP_USER=your_mailtrap_username
# MAILTRAP_PASS=your_mailtrap_password

# Cloudinary Configuration (for file uploads in production)
# Get your credentials from https://cloudinary.com
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# File Uploads (development only)
UPLOAD_DIR=uploads
