{
  "name": "sasakawa-restaurant-server",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Backend API for Sasakawa Restaurant Service Request System",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json && npx prisma generate",
    "start": "node dist/index.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "seed": "tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset --force && npm run seed",
    "promote-user": "tsx src/utils/promote-user.ts",
    "lint": "eslint . --ext .ts",
    "vercel-build": "npm run build && npx prisma generate",
    "render-build": "npm install && npm run build && npx prisma generate"
  },
  "dependencies": {
    "@clerk/clerk-sdk-node": "^5.0.0",
    "@prisma/client": "^6.14.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.14.9",
    "@types/nodemailer": "^6.4.19",
    "cloudinary": "^2.7.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "exceljs": "^4.4.0",
    "express": "^4.19.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.13",
    "svix": "^1.73.0",
    "typescript": "^5.5.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.57.0",
    "prisma": "^6.14.0",
    "tsx": "^4.15.7"
  }
}